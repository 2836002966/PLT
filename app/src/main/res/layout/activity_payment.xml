<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.plb.activity.PaymentActivity">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/payment_back"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"/>



    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/payment_setdistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付金额"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/payment_money"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥999.00"
            android:textSize="30dp"
            android:textColor="@color/red"/>
    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="@dimen/payment_setdistance_zfb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/alipay"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="20dp"/>
        <CheckBox
            android:layout_gravity="right"
            android:id="@+id/payment_zyb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            style="@style/ck"/>
    </FrameLayout>
    <FrameLayout
        android:layout_marginTop="@dimen/payment_setdistance_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/wechat"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textSize="20dp"/>
        <CheckBox
            android:layout_gravity="right"
            android:id="@+id/payment_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            style="@style/ck"/>
    </FrameLayout>
    <Button
        android:id="@+id/payment_btn"
        android:layout_marginTop="@dimen/payment_setdistance_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认付款方式"
        android:textSize="20dp"/>
</RelativeLayout>
