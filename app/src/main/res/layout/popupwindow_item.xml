<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_marginTop="10dp"
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/popupwindow_item_back"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/fork" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/popupwindow_wen"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/question"/>
    </FrameLayout>
    <View
        android:layout_marginTop="50dp"
        android:id="@+id/line_head"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
    <FrameLayout
        android:id="@+id/f2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f1">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝账号"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/popupwindow_zhuanghao"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*************"
            android:textSize="20dp"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/f3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f2">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款方式"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/popupwindow_ll"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/popupwindow_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="*************"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/back_right"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/f4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f3">
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="需付款"/>
        <TextView
            android:id="@+id/popupwindow_money"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="89.30元"
            android:textSize="35dp"/>

    </FrameLayout>
    <Button
        android:id="@+id/popupwindow_btn"
        android:layout_marginTop="30dp"
        android:layout_below="@id/f4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认付款"
        android:textSize="20dp"/>
</RelativeLayout>