<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white">

   <ImageView
       android:id="@+id/details_shop_iv"
       android:layout_centerHorizontal="true"
       android:src="@mipmap/adgn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <View
        android:id="@+id/view"
        android:layout_below="@+id/details_shop_iv"
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/details_shop_name"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="娃哈哈ad钙100g*12瓶/箱"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/shop_rl"
        android:layout_below="@+id/details_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:id="@+id/tv_shop_money"
            android:textColor="@color/orange"
            android:text="￥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_shop_money"
            android:textColor="@color/black"
            android:text="36/箱(￥3/瓶)" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/shop_ll"
        android:layout_below="@+id/shop_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp">
        <TextView
            android:textColor="@color/orange"
            android:text="2箱起订"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="|"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text=" 36箱可售" />
    </LinearLayout>

    <View
        android:layout_below="@+id/shop_ll"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <View
        android:layout_below="@+id/shop_ll"
        android:layout_marginTop="30dp"
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/et_purchase_normal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                
                <TextView
                    android:text="总价"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/orange"
                    android:text="￥0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <CheckBox
                   style="@style/shop_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="关注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/add_shop"
            android:background="@drawable/btn_addshop"
            android:text="加入进货单"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>


</RelativeLayout>
