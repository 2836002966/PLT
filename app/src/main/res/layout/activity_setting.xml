<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ede9">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left_exit"
            android:layout_margin="5dp"
            android:paddingTop="5dp" />

        <TextView
            style="@style/setting"
            android:text="设置"
            android:layout_toRightOf="@id/iv_back"
            android:layout_margin="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_version"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_back"
        android:layout_marginTop="40dp">

        <TextView
            style="@style/setting"
            android:text="当前版本"
            android:layout_marginLeft="20dp" />

        <TextView
            style="@style/setting"
            android:text="v1.0"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_version"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/setting"
            android:text="检查更新"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_update"
        android:layout_marginTop="40dp">

        <TextView
            style="@style/setting"
            android:text="意见反馈"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_below="@+id/rl_feedback"
        android:layout_marginTop="1dp">

        <TextView
            style="@style/setting"
            android:text="关于我们"
            android:layout_marginLeft="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/arrow"
            android:layout_marginRight="15dp"
            android:paddingTop="5dp" />

    </RelativeLayout>

</RelativeLayout>
