<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:background="@mipmap/adgn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/shopping_name"
                android:text="究极娃哈哈营养快乐哈哈哈"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/productinfo_dialog_market"
                android:text="五十市场"
                android:textSize="15sp"
                android:layout_below="@+id/shopping_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/min_order_number"
                android:layout_below="@+id/productinfo_dialog_market"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/min_order_number"
                android:layout_alignTop="@+id/min_order_number"
                android:text="箱起订"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/kucun_number_liangci"
                android:text="箱可售"
                android:layout_alignTop="@+id/min_order_number"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/kucun_number"
                android:text="222"
                android:layout_alignTop="@+id/min_order_number"
                android:layout_toLeftOf="@+id/kucun_number_liangci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/danjia_text"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="单价："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_toRightOf="@+id/danjia_text"
                android:layout_alignTop="@+id/danjia_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@mipmap/qian"
                    android:layout_width="25dp"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/danjia_price"
                    android:textColor="#FF7D1E"
                    android:text="100"
                    android:textSize="20sp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="/ 箱"
                    android:textSize="18sp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <TextView
                android:text="总价："
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <ImageView
                android:src="@mipmap/qian"
                android:layout_width="25dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/zongjia_price"
                android:textColor="#FF7D1E"
                android:text="200"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton

                android:background="@color/white"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/choose_number"
                android:gravity="center"
                android:text="2"
                android:textSize="25sp"
                android:layout_width="70dp"
                android:layout_height="40dp" />
            <ImageButton
                android:background="@color/white"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/shoucang_btn"
            android:src="@drawable/shoucang_icon"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_marginLeft="1dp"
            android:id="@+id/jiaru_jhd_btn"
            android:src="@drawable/jiaru_jhd_icon"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>