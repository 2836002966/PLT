<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/stop_head" android:id="@+id/head"/>

    <LinearLayout
        android:layout_below="@id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fbfbfb"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/list_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_weight="1.5"
            android:background="#f4f4f4" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#cdcdcd" />

        <RelativeLayout
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.0">

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/foodName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="副食品"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/foodName1"
                    android:paddingLeft="165dp"
                    android:src="@mipmap/back_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_below="@id/relative1"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="80dp"
                    android:stretchMode="spacingWidthUniform"
                    android:numColumns="3">
                </GridView>
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_marginTop="10dp"
                android:layout_below="@id/relative2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#7a7a7a"/>


            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_below="@id/view"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/foodName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="干果类"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/foodName2"
                    android:paddingLeft="165dp"
                    android:src="@mipmap/back_right" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/relative3"
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <GridView
                    android:id="@+id/gridView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="80dp"
                    android:stretchMode="spacingWidthUniform"
                    android:numColumns="3">
                </GridView>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

   <!-- 测试 调转到详情页-->
    <Button
        android:id="@+id/btntest"
        android:textColor="@color/black"
        android:text="跳转到详情页"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>